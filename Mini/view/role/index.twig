{% extends "_base.twig" %}
{% block content %}
    <nav class="main-nav">
        <div class="container">
            <a class="page-title">Roles</a>
            <ul class="sub-menu">
                <li>
                    <a href="/role/form">Add</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="row section">
        <div class="container">
            <table>
                <thead>
                    <tr>
                        <th data-field="id">Level</th>
                        <th data-field="id">Name</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.level }}</td>
                            <td><a href="/role/form/{{ item._id }}">{{ item.name }}</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}